{
  "name": "solink-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20 <=22"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "prisma:generate": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "upgrade:prisma": "bash scripts/upgrade-prisma.sh",
    "check:health": "bash scripts/check-health.sh",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest -i",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest -i --runInBand --ci"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "bs58": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "tweetnacl": "^1.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "6.19.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
